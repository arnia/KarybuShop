<query id="getDownloadInfo" action="select">
    <tables>
        <table name="shop_download_info" alias="di"/>
    </tables>
    <columns>
        <column name="di.*" />
    </columns>
    <conditions>
        <condition operation="equal" column="di.order_srl" var="order_srl" filter="number" notnull="notnull" />
        <condition operation="equal" column="di.product_srl" var="product_srl" filter="number" notnull="notnull" pipe="and" />
    </conditions>
</query>